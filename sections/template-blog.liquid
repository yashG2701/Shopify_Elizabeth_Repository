<div class="p-8">
    {% paginate blog.articles by section.settings.number_of_blog_posts %}
        <h1 class="text-center text-3xl">{{blog.title}}</h1>
        <div class="max-w-6xl mx-auto" >
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for article in blog.articles %}
                    <div>
                        <div class="w-full p-6  px-3">
                            <div class="bg-white shadow-xl rounded-lg overflow-hidden">
                               
                                {% if article.image %}
                                    <a href="{{article.url}}">
                                        <img class="w-full h-80 object-cover" src="{{ article.image | image_url: 'medium' }}" alt="{{ article.image.alt }}">

                                    </a> 
                                {% else %}
                                    {{'image' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100'}}
                                {% endif %}
                                <div class="p-4">
                                    <h1 class="text-xl font-medium my-4">{{article.title}}</h1>
                                    {% if article.excerpt.size>0 %}
                                        <p>{{article.excerpt | strip_html | truncatewords: 15 }}</p>
    
                                        {% else %}
                                            <p>{{article.content | strip_html | truncatewords: 15 }}</p>
                                        
                                    {% endif %}
    
                                    <a href="{{article.url}}" class="font-medium text-blue-600  hover: text-blue-800 my-4 block"> {{section.settings.blog_more}}</a>     
                                </div>
                        
                            </div>
                        </div>
                     
                    </div>
                {% endfor %}

            </div>
        
        </div>
        <div class="max-w-6xl mx-auto">
            {% render 'pagination', pagination: paginate %}
        </div>
    {% endpaginate %}

</div>




{% schema %}
    {
        "name": "blog",
        "settings": [
            {
                "type": "text",
                "id": "blog_more",
                "label": "read more label",
                "default": "Read More"
            },
            {
                "type": "range",
                "id": "number_of_blog_posts",
                "label": "Blog posts per page",
                "min": 1,
                "max": 6,
                "step": 1,
                "default": 3
            }
        ]
    }
    {% endschema %}
    